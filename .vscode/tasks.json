{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "bmx",
            "source": "${relativeFile}",
            "output": "Brick Breaker",
            "make": "makeapp",
            "app": "gui",
            "arch": "x64",
            "platform": "linux",
            "threaded": true,
            "debug": false,
            "quick": false,
            "execute": true,
            "verbose": false,
            "problemMatcher": [
                "$blitzmax"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}